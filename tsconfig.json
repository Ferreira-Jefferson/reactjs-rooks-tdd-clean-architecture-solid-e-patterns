{
  "compilerOptions": {
    "target": "es2019",
    "kib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "esModuleInterop": true,
    "module": "ESNext",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src"
  ]
}